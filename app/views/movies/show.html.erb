<section class="movie-details">
  <div class="details">
    <div class="image">
      <%= image_tag @movie.image_file_name %>
      <% if current_user %>
        <div class="faves">
          <%= fave_or_unfave_button(@movie, @favorite) %>
          <div class="count">
            <%= @fans.count %>
          </div>
        </div>
      <% end %>
    </div>
    <h1><%= @movie.title %></h1>
    <h2>
      <%= year_of(@movie) %> &bull; <%= @movie.rating %>
      <%= stars_display(@movie) %>
      <div class="reviews">
        <%= link_to pluralize(@movie.reviews.count, "review"), movie_reviews_path(@movie) %>
      </div>
    </h2>
    <p>
      <%= @movie.description %>
    </p>
    <table>
      <%= link_to "Write a review", new_movie_review_path(@movie), class:"review" %>
      <tr>
        <th>Director:</th>
        <td><%= @movie.director %></td>
      </tr>
      <tr>
        <th>Duration:</th>
        <td><%= @movie.duration %></td>
      </tr>
      <tr>
        <th>Total Gross:</th>
        <td><%= total_gross(@movie) %></td>
      </tr>
    </table>
  </div>
    <aside>
    <% if @fans.present? %>
      <h4>Fans</h4>
      <ul>
        <% @fans.each do |user| %>
          <%# TODO: Fix style so that image responds appropriately to sizing %>
          <%= profile_image(user)%>
          <li><%= link_to user.name, user %></li>
        <% end %>
      </ul>
    <% end %>
    <% if @genres.present? %>
      <h4>Genres</h4>
      <ul>
        <% @genres.each do |genre| %>
          <li><%= genre.name %></li>
        <% end %>
      </ul>
    <% end %>
  </aside>
</section>
<section>
  <h2> Write a review!</h2>
  <%= render "reviews/form", movie:@movie, review: @movie.reviews.new %>
</section>
<% if current_user_admin? %>
  <section class="admin">
    <%= link_to "Edit", edit_movie_path(@movie), class: "button" %>
    <%= link_to "Delete", @movie, class: "button", method: :delete, data: { confirm: "Really delete movie?" } %>
  </section>
<% end %>
